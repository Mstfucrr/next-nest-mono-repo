{
  "name": "mono-repo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=24.1.0"
  },
  "scripts": {
    "test": "concurrently \"pnpm:test:services\" \"pnpm:test:web\"",
    "test:services": "node scripts/services.js test",
    "test:web": "pnpm --filter web test",
    "dev": "concurrently -n SERVICES,WEB -c blue,green \"pnpm:dev:services\" \"pnpm:dev:web\"",
    "dev:services": "node scripts/services.js start:dev",
    "dev:web": "pnpm --filter web dev",
    "build:services": "node scripts/services.js build",
    "build:web": "pnpm --filter web build",
    "format": "prettier --write \"apps/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:services": "node scripts/services.js format",
    "format:web": "pnpm --filter web format",
    "format:check": "node scripts/services.js format:check --include-web",
    "lint": "node scripts/services.js lint --include-web",
    "setup:prisma": "node scripts/services.js prisma:generate",
    "turbo:build": "turbo build",
    "turbo:dev": "turbo dev",
    "turbo:lint": "turbo lint",
    "turbo:test": "turbo test",
    "turbo:format": "turbo format",
    "turbo:check-types": "turbo check-types",
    "turbo:build:services": "turbo build --filter=./apps/services/*",
    "turbo:build:libs": "turbo build --filter=./libs/*",
    "turbo:dev:services": "turbo start:dev --filter=./apps/services/* --parallel",
    "turbo:dev:web": "turbo dev --filter=./apps/web --parallel",
    "turbo:lint:services": "turbo lint --filter=./apps/services/*",
    "turbo:test:services": "turbo test --filter=./apps/services/*",
    "turbo:format:services": "turbo format --filter=./apps/services/*",
    "turbo:start:services": "turbo start --filter=./apps/services/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.9"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/services/*",
    "apps/web",
    "libs/*"
  ]
}
