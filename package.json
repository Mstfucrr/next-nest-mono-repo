  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"pnpm:dev:api\" \"pnpm:dev:web\"",
    "dev:api": "pnpm --filter api start:dev",
    "dev:web": "pnpm --filter web dev",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "format": "prettier --write \"apps/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:api": "pnpm --filter api format",
    "format:web": "pnpm --filter web format",
    "format:check": "pnpm --filter api format:check && pnpm --filter web format:check",
    "lint": "pnpm --filter api lint && pnpm --filter web lint"
  },
