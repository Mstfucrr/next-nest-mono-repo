{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "start:dev": {
      "persistent": true,
      "cache": false
    },
    "start:debug": {
      "persistent": true,
      "cache": false
    },
    "start:prod": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    },
    "test:cov": {
      "dependsOn": ["^test"]
    },
    "test:debug": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "dependsOn": ["^test"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    }
  },
  "globalDependencies": ["**/.env.*local"]
}
