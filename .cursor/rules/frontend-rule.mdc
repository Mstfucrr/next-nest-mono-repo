### Authorization HOC

```typescript
// ✅ Doğru
export const withAuthorization = (Component: React.ComponentType<any>) => {
  return (props: any) => {
    const { user } = useAuth()
    const requiredPermissions = Component.requiredPermissions || []

    if (!user) {
      return <Navigate to="/login" replace />
    }

    if (requiredPermissions.length > 0) {
      const hasPermission = requiredPermissions.some(permission =>
        user.permissions.includes(permission)
      )
      
      if (!hasPermission) {
        return <div>Access denied</div>
      }
    }

    return <Component {...props} />
  }
}

